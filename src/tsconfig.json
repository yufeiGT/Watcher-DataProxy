{
    "compilerOptions": {
        "sourceMap": true,
        "allowJs": true,
        "target": "ES2015",
        "module": "CommonJS",
        "lib": [
            "es2016",
            "dom"
        ],
        "declaration": true,
        "declarationDir": "../dist/typings/",
        "outDir": "../dist/",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "files": [
        "./index.ts"
    ],
    "include": [
        "./**/*",
        "./**/*.ts",
        "./**/*.d.ts",
        "./**/*.vue",
    ],
    "exclude": [
        "node_modules"
    ]
}